import java.util.*;
/*
 *  프로그래머스 문제 풀이
 *  https://school.programmers.co.kr/learn/courses/30/lessons/42579
 *  입력 : 노래의 장르를 나타내는 문자열 배열 genres와 노래별 재생 횟수를 나타내는 정수 배열 plays
 *  출력 : 베스트 앨범에 들어갈 노래의 고유 번호를 순서대로 return
 */

public class July_02_02 {
	public int[] add_element(int []ar, int new_element) {
		int[] new_arr = new int[ar.length+1];
		for(int i = 0; i < ar.length; i++) {
			new_arr[i] = ar[i];
		}
		new_arr[ar.length] = new_element;
		
		return new_arr;
	}
	public int[] solution(int []arr) {
		int[] answer = {};
		
		if(arr == null) {
			return answer;
		}
		
        int prev = arr[0];
        arr = add_element(arr, prev);
        
        for(int i = 1; i < arr.length; i++) {
        	if(!(arr[i] == prev)) {
        		
        	}
        }

        return answer;
    }
}
